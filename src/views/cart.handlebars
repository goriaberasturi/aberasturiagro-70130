<section id="cart">
    <h1>Carrito de compras</h1>
    <div class="cart-container">
        <div class="cartList">
            {{#each products}}
            <div id="{{product._id}}" class="productCard">
                <div class="imgContainer">
                    <img src="{{product.thumbnails}}" alt="{{product.title}}">
                </div>
                <div class="infoContainer">
                    <h2>{{product.title}}</h2>
                    <ul>
                        <li class="price-info"><span>price:</span> {{product.price}}</li>
                        <li><span>category:</span> {{product.category}}</li>
                        <li class="stock-info"><span>stock:</span> {{product.stock}}</li>
                    </ul>
                </div>
                <div class="ctrlsContainer">
                    <div class="cartCounter">
                        <span class="minus">-</span>
                        <span class="num">{{quantity}}</span>
                        <span class="plus">+</span>
                    </div>
                    <p>$ <span class="cartAmount"></span></p>
                    <buton class="deleteBtn">Eliminar</buton>
                </div>
            </div>
            {{/each}}
        </div>
        {{#if isConfirm}}
        <div class="purchaseInfo">
            <h2>Resumen de compra</h2>
            <p><span>Total: $ </span><span class="products-amount"></span></p>
            <button class="purchase-confirm">Confirmar compra</button>
        </div>
        {{/if}}
    </div>
</section>
<script src="/socket.io/socket.io.js"></script>
<script src="./../../static/assets/js/cart.js"></script>